{% extends 'base.html.twig' %}

{% block title %}Nos formations{% endblock %}

{% block body %}
   <div class="container">
       <h1>Nos formations</h1>
    {% for formation in formations %}
        <div class="col-md-4 formation-list">
            <a href="" class="btn-formation float-end m-2">Suivre cette formation</a>
            <p>{{ formation.title }}</p>
            <p>{{ formation.description }}</p>
        </div>
    {% endfor %}
   </div>
{% endblock %}
